class Solution {
    TreeNode result;
    public TreeNode inorderSuccessor(TreeNode root, TreeNode p) {
        traverse(root,p.val);
        return result;
    }
    public void traverse(TreeNode root, int val){
        if(root == null){
            return;
        }
        if(result != null){
            return;
        }
        traverse(root.left, val);
        if(result == null && root.val > val){
            result = root;
        }
        if(result != null) return;
        traverse(root.right, val);
    }
}
